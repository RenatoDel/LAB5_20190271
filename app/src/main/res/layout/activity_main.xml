<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Saludo dinámico -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Hola, Usuario!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Mensaje motivacional -->
    <TextView
        android:id="@+id/tvMotivationalMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Hoy es un gran día para formar buenos hábitos!"
        android:textSize="16sp"
        android:textColor="#7F8C8D"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:paddingHorizontal="16dp" />

    <!-- Imagen de perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_default_profile"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_image_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground" />

    </LinearLayout>

    <!-- Texto indicativo para la imagen -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toca para cambiar tu foto"
        android:textSize="12sp"
        android:textColor="#95A5A6"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Botón Ver mis hábitos -->
    <Button
        android:id="@+id/btnViewHabits"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Ver mis hábitos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary_background"
        android:layout_marginBottom="16dp"
        android:elevation="4dp" />

    <!-- Botón Configuraciones -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Configuraciones"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3498DB"
        android:background="@drawable/button_secondary_background"
        android:elevation="2dp" />

</LinearLayout>